<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/imo_default_face" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_left"
        android:layout_toRightOf="@+id/iv_left"
        android:text="张三"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_left"
        android:layout_toRightOf="@+id/iv_left"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Tip:Last Dialogue Info"
        android:textColor="@color/recentcontact_info_color"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/right_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_left"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_left"
        android:layout_marginRight="10dip" >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="12:20"
            android:textColor="@color/recentcontact_info_color" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/recentcontact_item_bg"
            android:gravity="center_vertical"
            android:paddingBottom="1dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="1dip"
            android:text="99+"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_left"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/recentcontact_item_bg"
        android:text="关闭"
        android:visibility="gone" />

</RelativeLayout>