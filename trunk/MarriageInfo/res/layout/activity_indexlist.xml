<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:id="@+id/ll_base"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

        >
    <org.talentware.android.activity.TitleBar android:id="@+id/titlebar" android:layout_width="fill_parent"
                                              android:layout_alignParentTop="true"
                                              android:layout_height="wrap_content"></org.talentware.android.activity.TitleBar>

    <LinearLayout
            android:id="@+id/interGELinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"/>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:layout_below="@id/titlebar" android:layout_above="@id/interGELinearLayout"
                  android:weightSum="3" android:orientation="vertical" android:background="@drawable/activity_bg">
        <ScrollView android:id="@+id/sv_prehint" android:layout_height="fill_parent" android:layout_width="fill_parent"
                    android:layout_weight="2"
                    android:visibility="gone">
            <TextView android:id="@+id/tv_prehint" android:layout_width="fill_parent"
                      android:layout_height="fill_parent"></TextView>
        </ScrollView>

        <ListView
                android:id="@+id/lv_index"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:scrollbars="none"
                android:cacheColorHint="#00000000"
                ></ListView>
    </LinearLayout>


</RelativeLayout>