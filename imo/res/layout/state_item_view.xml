<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/pop_item_height"
    >
    <!--  @dimen/pop_item_height-->

    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="@dimen/pop_item_icon_height"
        android:layout_height="@dimen/pop_item_icon_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/online_state" />

    <TextView
        android:id="@+id/tv_state_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="@dimen/pop_item_fontsize"
        android:layout_toRightOf="@+id/iv_state"
        android:layout_marginLeft="10dip"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:text="@string/online_state" />
    
    <ImageView
        android:id="@+id/iv_ischecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/state_checked" />

</RelativeLayout>