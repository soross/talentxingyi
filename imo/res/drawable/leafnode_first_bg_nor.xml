<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape android:shape="rectangle">
			<solid android:color="#d1d1d3" />
			<size android:height="1px" />
		</shape>
	</item>
	
	<item
		android:bottom="0px"
		android:left="0px"
		android:right="0px"
		android:top="1px">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
				android:startColor="@color/user_gradient_bg_begin"
				android:centerColor="@color/user_gradient_bg_middle"
				android:endColor="@color/user_gradient_bg_end"
				android:angle="270" />
		</shape>
	</item>
	
	<item
	    android:top="1px"
		android:left="0px"
		android:right="0px"
		android:bottom="@dimen/user_node_first_top">
		<shape android:shape="rectangle">
			<solid android:color="#00000000" />
			<size android:height="5px" />
		</shape>
	</item>
</layer-list>