<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#E3E8EA" /><!-- #d1d1d3 -->
			<size android:height="1px" />
        </shape>
    </item>
    
    <item
        android:bottom="0px"
        android:left="0px"
        android:right="0px"
        android:top="1px">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:centerColor="@color/dept_gradient_bg_middle"
                android:endColor="@color/dept_gradient_bg_end"
                android:startColor="@color/dept_gradient_bg_begin" />
        </shape>
    </item>

</layer-list>