<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:id="@+id/ll_base"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

        >
    <org.talentware.android.activity.TitleBar android:id="@+id/titlebar" android:layout_width="fill_parent"
                                              android:layout_alignParentTop="true"
                                              android:layout_height="wrap_content"></org.talentware.android.activity.TitleBar>

    <LinearLayout
            android:id="@+id/interGELinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"/>

    <GridView
            android:id="@+id/gv_home"
            android:layout_above="@id/interGELinearLayout"
            android:layout_below="@id/titlebar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"
            android:background="@drawable/activity_bg"
            android:cacheColorHint="#00000000"
            android:layout_weight="1"
            ></GridView>


</RelativeLayout>

