<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:gravity="center">
    <RelativeLayout
            android:id="@+id/header"
            android:layout_width="300dip"
            android:layout_height="48dip"
            android:background="@drawable/header_background"
            android:gravity="center_vertical">
        <ImageButton
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon"/>
        <ImageButton
                android:id="@+id/add_note"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dip"
                android:scaleType="matrix"
                android:layout_height="fill_parent"
                android:paddingTop="15dip"
                android:layout_width="100dip"
                android:background="@null"
                style="@style/header_btn_add"/>
        <ImageButton
                android:id="@+id/refesh"
                android:layout_alignParentRight="true"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:scaleType="matrix"
                android:paddingTop="15dip"
                android:paddingLeft="66dip"
                android:background="@null"
                style="@style/header_btn_refresh"/>
        <LinearLayout android:id="@+id/progress" android:layout_height="wrap_content" android:visibility="gone"
                      android:layout_width="wrap_content" android:layout_alignParentRight="true">
            <ProgressBar android:layout_height="wrap_content" android:layout_width="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:id="@+id/nodeitem1"
                      android:orientation="vertical" android:padding="5dip">
            <TextView android:id="@+id/nodeitem1_title"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:maxLines="1"
                      style="@style/noteListTitle"/>
            <TextView android:id="@+id/nodeitem1_abstract"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/noteListAbstract"/>
        </LinearLayout>
        <ImageView android:layout_width="300dip" android:layout_height="1dip" android:background="#ddd"/>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:id="@+id/nodeitem2"
                      android:orientation="vertical" android:padding="5dip">
            <TextView android:id="@+id/nodeitem2_title"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:maxLines="1"
                      style="@style/noteListTitle"/>
            <TextView android:id="@+id/nodeitem2_abstract"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/noteListAbstract"/>
        </LinearLayout>
        <ImageView android:layout_width="300dip" android:layout_height="1dip" android:background="#ddd"/>

        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:id="@+id/nodeitem3"
                      android:orientation="vertical" android:padding="5dip">
            <TextView android:id="@+id/nodeitem3_title"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:maxLines="1"
                      style="@style/noteListTitle"/>
            <TextView android:id="@+id/nodeitem3_abstract"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/noteListAbstract"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/header"
            android:layout_width="300dip"
            android:layout_height="30dip"
            android:background="@drawable/header_background"
            android:gravity="center_vertical">
        <TextView android:id="@+id/updatetime"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentBottom="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:maxLines="1"
                  android:textSize="12dip"/>
    </RelativeLayout>
</LinearLayout>