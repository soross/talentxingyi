<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/header_background"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true">
        <TextView
                android:id="@+id/header_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/header_title"
                android:textColor="@drawable/white"
                android:gravity="center"
                android:textSize="24dip"
                android:text="@string/title_note_detail"/>
        <Button android:id="@+id/fontSizeChange"
                android:layout_height="fill_parent"
                android:layout_width="100dip"
                android:layout_alignParentRight="true"
                android:text="   A+"
                android:textSize="26dip"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                android:background="@null"
                android:paddingLeft="20dip"
                android:paddingTop="0dip"/>
        <ImageButton
                android:id="@+id/header_right_btn"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dip"
                android:scaleType="matrix"
                android:layout_height="fill_parent"
                android:paddingTop="15dip"
                android:layout_width="100dip"
                android:background="@null"
                style="@style/header_btn_add"/>
    </RelativeLayout>
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/webBg"
            android:layout_weight="1">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                      android:orientation="vertical">
            <RelativeLayout
                    android:id="@+id/layoutNoteTitle"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/icoNoteTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/note_title"
                        android:padding="10dip"
                        android:layout_alignParentLeft="true"/>
                <TextView
                        android:id="@+id/txtNoteTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dip"
                        android:textColor="#333333"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:paddingTop="5dip"
                        android:paddingBottom="10dip"
                        android:layout_toRightOf="@id/icoNoteTitle"/>
                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="@drawable/line"
                        android:layout_below="@id/txtNoteTitle"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/layoutNoteTag"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/icoNoteTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/note_tag"
                        android:padding="10dip"
                        android:layout_alignParentLeft="true"/>
                <TextView
                        android:id="@+id/txtNoteTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dip"
                        android:textColor="#333333"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:paddingTop="5dip"
                        android:paddingBottom="10dip"
                        android:layout_toRightOf="@id/icoNoteTag"/>
                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="@drawable/line"
                        android:layout_below="@id/txtNoteTag"/>
            </RelativeLayout>
            <WebView
                    android:id="@+id/txtNoteContent"
                    android:layout_margin="5dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
            </WebView>
        </LinearLayout>
        <LinearLayout android:id="@+id/load"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center">
            <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dip"
                    style="@style/loadTxt"
                    android:text="@string/loading"/>
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout android:id="@+id/attachlayout" android:background="#ddd"
                    android:layout_width="fill_parent" android:visibility="gone"
                    android:layout_height="56dip">
        <Gallery android:id="@+id/attachview"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:spacing="10dip"/>
        <TextView android:id="@+id/attachname"
                  android:layout_below="@id/attachview"
                  android:layout_alignParentBottom="true"
                  android:layout_width="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TableLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bottom_bg"
            android:stretchColumns="0,1,2,3">
        <TableRow
                android:gravity="bottom">
            <ImageButton
                    android:id="@+id/btnFresh"
                    style="@style/bottom_btn_refresh"
                    />
            <ImageButton
                    android:id="@+id/btnShare"
                    style="@style/bottom_btn_share"
                    />
            <ImageButton
                    android:id="@+id/btnEdit"
                    style="@style/bottom_btn_edit"
                    />
            <ImageButton
                    android:id="@+id/btnDel"
                    style="@style/bottom_btn_del"
                    />
        </TableRow>
    </TableLayout>
</LinearLayout>

